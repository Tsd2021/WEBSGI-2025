@using WEBSGI.Repositorio;
@using WEBSGI.Models;
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewBag.Title SGI | Tecnisegur</title>
    <link rel="icon" type="image/x-icon" href="~/IMGs/logo.ico" />

    <!-- Bootstrap -->
    <link rel="stylesheet" href="~/Content/Site.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/modernizr")
    @RenderSection("styles", required: false)

<style>
@@media (max-width: 768px) {
    .logo-center {
        display: none !important;
    }
}

        :root {
            --primary-red: #990000;
            --hover-red: #b30000;
            --sidebar-collapsed-width: 60px;
            --sidebar-expanded-width: 250px;
        }

        /* === TOPBAR === */
        .topbar {
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            height: 70px;
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 0 20px;
            background: transparent;
            z-index: 1030;
        }

        /* Logo centrado absoluto */
        .logo-center {
            position: absolute;
            left: 50%;
            transform: translateX(-50%);
            display: flex;
            align-items: center;
            justify-content: center;
        }

            .logo-center img {
                height: 60px; /* más grande */
                width: auto;
            }

        .topbar-left,
        .topbar-right {
            display: flex;
            align-items: center;
            z-index: 1030;
        }



        /* === BOTÓN LOGOUT === */
        .btn-logout {
            display: flex;
            align-items: center;
            gap: 6px;
            padding: 8px 16px;
            font-size: 0.95rem;
            font-weight: 500;
            color: #fff;
            background: linear-gradient(135deg, #d9534f, #b52b27);
            border: none;
            border-radius: 6px;
            cursor: pointer;
            transition: all 0.25s ease-in-out;
            box-shadow: 0 2px 5px rgba(0,0,0,0.2);
        }

            .btn-logout:hover {
                background: linear-gradient(135deg, #c9302c, #a0201d);
                transform: translateY(-2px);
                box-shadow: 0 4px 10px rgba(0,0,0,0.25);
            }

            .btn-logout:active {
                transform: scale(0.95);
            }

            .btn-logout i {
                font-size: 1rem;
            }

        /* === BODY === */
        body {
            display: flex;
            flex-direction: column;
            min-height: 100vh;
            margin: 0;
            background: #f8f9fa;
            padding-top: 65px; /* evita que el contenido quede pegado arriba */
        }

        .main-container {
            flex: 1;
            padding: 20px;
            transition: margin-left 0.3s ease;
        }

        /* === SIDEBAR === */
        .sidebar {
            width: var(--sidebar-collapsed-width);
            background-color: var(--primary-red);
            color: white;
            position: fixed;
            top: 0;
            left: 0;
            height: 100%;
            transition: width 0.3s ease, transform 0.3s ease;
            z-index: 1050;
            overflow-x: hidden;
            overflow-y: auto;
            box-shadow: 2px 0 8px rgba(0,0,0,0.3);
        }

            .sidebar .logo {
                position: relative;
                text-align: center;
                padding: 15px;
                background: #800000;
            }

                .sidebar .logo img {
                    max-width: 60%;
                }

            .sidebar a {
                display: flex;
                align-items: center;
                padding: 14px 18px;
                text-decoration: none;
                font-size: 16px;
                color: white;
                transition: background-color 0.3s;
                white-space: nowrap;
            }

                .sidebar a:hover {
                    background-color: var(--hover-red);
                }

            .sidebar i {
                margin-right: 10px;
                font-size: 1.2rem;
            }

            .sidebar .link-text {
                display: none;
            }

        /* Expandido por hover (desktop) */
        @@media (min-width: 992px) {
            .sidebar:hover,
            .sidebar.pinned {
                width: var(--sidebar-expanded-width);
            }

                .sidebar:hover .link-text,
                .sidebar.pinned .link-text {
                    display: inline;
                }

            .main-container {
                margin-left: var(--sidebar-collapsed-width);
            }

            .sidebar.pinned ~ .main-container {
                margin-left: var(--sidebar-expanded-width);
            }
        }

        /* === MOVIL === */
        @@media (max-width: 991px) {
            .sidebar {
                width: var(--sidebar-expanded-width);
                transform: translateX(-100%);
            }

                .sidebar.active {
                    transform: translateX(0);
                }

            .main-container {
                margin-left: 0 !important;
            }

            .sidebar.active .link-text {
                display: inline;
            }
        }

        /* === BOTÓN HAMBURGUESA === */
        .hamburger-btn {
            width: 30px;
            height: 22px;
            border: none;
            background: transparent;
            display: flex;
            flex-direction: column;
            justify-content: space-between;
            cursor: pointer;
            z-index: 2003;
        }

            .hamburger-btn span {
                display: block;
                height: 3px;
                width: 100%;
                background: #000;
                border-radius: 2px;
                transition: all 0.3s ease;
            }

            .hamburger-btn.active span:nth-child(1) {
                transform: rotate(45deg) translateY(8px);
            }

            .hamburger-btn.active span:nth-child(2) {
                opacity: 0;
            }

            .hamburger-btn.active span:nth-child(3) {
                transform: rotate(-45deg) translateY(-8px);
            }

        /* === OVERLAY === */
        .overlay {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0,0,0,0.4);
            opacity: 0;
            visibility: hidden;
            transition: opacity 0.3s ease;
            z-index: 1040;
        }

            .overlay.active {
                opacity: 1;
                visibility: visible;
            }

        /* === FOOTER === */
        .footer {
            text-align: center;
            padding: 10px;
            background: #343a40;
            color: #f1f1f1;
            font-size: 0.85rem;
        }
</style>
</head>
<body>
    @if (Session["Usuario"] != null)
    {
        <div class="topbar">
            <!-- Zona izquierda -->
            <div class="topbar-left">
                <button class="hamburger-btn" id="hamburgerBtn">
                    <span></span>
                    <span></span>
                    <span></span>
                </button>
            </div>

            <!-- Logo centrado -->
            <div class="logo-center">
                <img src="~/IMGs/LogoOriginal.png" alt="Logo Tecnisegur" />
            </div>

            <!-- Zona derecha -->
            <div class="topbar-right">
                <form id="logoutForm" action='@Url.Action("Logout", "Login")' method="post" class="d-inline">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn-logout">
                        <i class="bi bi-box-arrow-right"></i>
                        <span>Cerrar sesión</span>
                    </button>
                </form>
            </div>
        </div>



        <!-- Sidebar -->
        <div class="sidebar" id="sidebar">
            <div class="logo">
                <img src='@Url.Content("~/imgs/Logo.ico")' alt="Logo SGI" />
            </div>

            @{
                var repositorioPermisos = new RepositorioUsuarios();
                int idPuesto = Convert.ToInt32(Session["PUESTOID"]);
                bool esAdministrador = Session["NIVEL"]?.ToString() == "ADMINISTRADOR";
                //bool esCamillo = Session["numero"]?.ToString() == "20044";
                //bool esCamillo = Session["numero"]?.ToString() == "10546";

                Func<int, bool> tienePermiso = (acceso) =>
                {
                    return esAdministrador || repositorioPermisos.VerificarPermiso(idPuesto, acceso);
                };
            }
                        <a href='@Url.Action("Index", "Inicio")'><i class="bi bi-house-door-fill"></i><span class="link-text">Inicio</span></a>
            @if (tienePermiso(Permisos.PermisosAcceso.DocumentosListados))
            {<a href='@Url.Action("Index", "Documentos")'><i class="bi bi-file-earmark-text"></i><span class="link-text">Documentos</span></a>}
            @if (esAdministrador)
            {
                <a href='@Url.Action("Index", "TiposDocumentos")'><i class="bi bi-journal-text"></i><span class="link-text">Tipos de Documentos</span></a>
                <a href='@Url.Action("Index", "Carpetas")'><i class="bi bi-folder-fill"></i><span class="link-text">Carpetas</span></a>
                <a href='@Url.Action("Index","Normas")'><i class="bi bi-book"></i><span class="link-text">Normas</span></a>
                <a href='@Url.Action("Index","Permisos")'><i class="bi bi-shield-lock"></i><span class="link-text">Permisos</span></a>
            }
            @if (tienePermiso(Permisos.PermisosAcceso.NoConformidades))
            {<a href='@Url.Action("Index","NoConformidades")'><i class="bi bi-exclamation-octagon"></i><span class="link-text">No Conformidades</span></a>}
            @if (tienePermiso(Permisos.PermisosAcceso.OportunidadMejora))
            {<a href='@Url.Action("Index","OportunidadMejora")'><i class="bi bi-graph-up-arrow"></i><span class="link-text">Oportunidades de Mejora</span></a>}
            @if (esAdministrador)
            {
                <a href='@Url.Action("Index","Puestos")'><i class="bi bi-person-workspace"></i><span class="link-text">Puestos</span></a>
                <a href='@Url.Action("Index","Usuarios")'><i class="bi bi-people-fill"></i><span class="link-text">Usuarios</span></a>
            }
        </div>
    }

    <div class="overlay" id="overlay"></div>

    <div class="main-container">
        @RenderBody()
    </div>

    <div class="footer">
        <p>&copy; @DateTime.Now.Year Tecnisegur. Todos los derechos reservados.</p>
    </div>

    @RenderSection("scripts", required: false)
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        const hamburgerBtn = document.getElementById("hamburgerBtn");
        const sidebar = document.getElementById("sidebar");
        const overlay = document.getElementById("overlay");

        function toggleSidebar() {
            if (window.innerWidth < 992) {
                sidebar.classList.toggle("active");
                overlay.classList.toggle("active");
            } else {
                sidebar.classList.toggle("pinned");
            }
            hamburgerBtn.classList.toggle("active");
        }

        hamburgerBtn.addEventListener("click", toggleSidebar);
        overlay.addEventListener("click", toggleSidebar);

        document.querySelectorAll("#sidebar a").forEach(link => {
            link.addEventListener("click", () => {
                if (window.innerWidth < 992 && sidebar.classList.contains("active")) {
                    toggleSidebar();
                }
            });
        });

        // Limpieza de backdrop al cerrar modales
        $(document).on('hidden.bs.modal', '.modal', function () {
            $('.modal-backdrop').remove();
            $('body').removeClass('modal-open').css('padding-right', '');
        });
    </script>
</body>
</html>
